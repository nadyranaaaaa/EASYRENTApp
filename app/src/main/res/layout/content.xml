<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdsCreateActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="0dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp"
                        android:layout_marginBottom="18dp"
                        android:background="#F3EFEF"
                        android:orientation="vertical">


                            <ImageButton
                                android:id="@+id/editimage"
                                android:layout_width="333dp"
                                android:layout_height="126dp"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:adjustViewBounds="true"
                                android:background="@color/white"
                                android:scaleType="fitCenter"
                                android:text="+"/>

                            <EditText
                                android:id="@+id/editalamat"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:background="@drawable/rounded_edittext"
                                android:clickable="false"
                                android:layout_marginRight="3dp"
                                android:drawablePadding="10dp"
                                android:ems="10"
                                android:layout_margin="8dp"
                                android:hint="Alamat rumah"
                                android:padding="10dp"
                                android:inputType="number"
                                android:textColor="@color/black"
                                android:textColorHint="#6B6B6B"
                                android:gravity="start|center"
                                android:textSize="15dp" />


                                <EditText
                                    android:id="@+id/editdaerah"
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:background="@drawable/rounded_edittext"
                                    android:clickable="false"
                                    android:layout_marginRight="3dp"
                                    android:drawablePadding="10dp"
                                    android:ems="10"
                                    android:hint="Daerah"
                                    android:padding="10dp"
                                    android:inputType="number"
                                    android:textColor="@color/black"
                                    android:textColorHint="#6B6B6B"
                                    android:gravity="start|center"
                                    android:textSize="15dp" />

                                <EditText
                                    android:id="@+id/editnegeri"
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:background="@drawable/rounded_edittext"
                                    android:clickable="false"
                                    android:drawablePadding="10dp"
                                    android:ems="10"
                                    android:layout_margin="3dp"
                                    android:hint="Negeri"
                                    android:padding="10dp"
                                    android:inputType="number"
                                    android:textColor="@color/black"
                                    android:textColorHint="#6B6B6B"
                                    android:gravity="start|center"
                                    android:textSize="15dp"/>

                            <Spinner
                                android:id="@+id/editcategory"
                                android:layout_width="180dp"
                                android:layout_height="45dp"
                                android:background="@drawable/rounded_edittext"
                                android:layout_margin="0dp"
                                android:layout_marginHorizontal="20dp"
                                android:entries="@array/category_list"
                                android:focusable="false" />

                            <Spinner
                                android:id="@+id/editkelengkapan"
                                android:layout_width="170dp"
                                android:layout_height="45dp"
                                android:background="@drawable/rounded_edittext"
                                android:layout_margin="0dp"
                                android:layout_marginHorizontal="20dp"
                                android:entries="@array/kelengkapan_list"
                                android:focusable="false" />

                            <EditText
                                android:id="@+id/editmaklumat"
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:layout_marginHorizontal="8dp"
                                android:layout_marginBottom="5dp"
                                android:hint="Maklumat rumah"
                                android:textColorHint="#6B6B6B"
                                android:padding="10dp"
                                android:drawablePadding="10dp"
                                android:background="@drawable/rounded_edittext"
                                android:gravity="start|center"
                                android:inputType="textMultiLine|textPersonName"
                                android:lines="2"
                                android:text=""
                                android:textSize="16sp"/>

                                <EditText
                                    android:id="@+id/editdeposit"
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:background="@drawable/rounded_edittext"
                                    android:clickable="false"
                                    android:drawablePadding="10dp"
                                    android:ems="10"
                                    android:layout_marginRight="3dp"
                                    android:hint="Deposit"
                                    android:padding="10dp"
                                    android:inputType="number"
                                    android:textColor="@color/black"
                                    android:textColorHint="#6B6B6B"
                                    android:gravity="start|center"
                                    android:textSize="15dp" />


                                <EditText
                                    android:id="@+id/editpendahuluan"
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:background="@drawable/rounded_edittext"
                                    android:clickable="false"
                                    android:drawablePadding="10dp"
                                    android:ems="10"
                                    android:hint="Pendahuluan"
                                    android:padding="10dp"
                                    android:inputType="number"
                                    android:textColor="@color/black"
                                    android:textColorHint="#6B6B6B"
                                    android:gravity="start|center"
                                    android:textSize="15dp" />


                            <EditText
                                android:id="@+id/editsewa"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:background="@drawable/rounded_edittext"
                                android:clickable="false"
                                android:drawablePadding="10dp"
                                android:ems="10"
                                android:hint="Sewa"
                                android:padding="10dp"
                                android:inputType="number"
                                android:textColor="@color/black"
                                android:textColorHint="#6B6B6B"
                                android:gravity="start|center"
                                android:textSize="15dp" />


                                <Spinner
                                    android:id="@+id/editbilik"
                                    android:layout_width="190dp"
                                    android:layout_height="45dp"
                                    android:background="@drawable/rounded_edittext"
                                    android:layout_margin="0dp"
                                    android:layout_marginHorizontal="20dp"
                                    android:entries="@array/bilik_list"
                                    android:focusable="false" />

                                <Spinner
                                    android:id="@+id/edittandas"
                                    android:layout_width="190dp"
                                    android:layout_height="45dp"
                                    android:background="@drawable/rounded_edittext"
                                    android:layout_margin="0dp"
                                    android:layout_marginHorizontal="20dp"
                                    android:entries="@array/tandas_list"
                                    android:focusable="false" />


                            <Button
                                android:id="@+id/btnedit"
                                android:layout_width="160dp"
                                android:layout_height="40dp"
                                android:layout_margin="8dp"
                                android:gravity="center"
                                android:text="KEMASKINI"
                                android:textColor="#FAF6F6"
                                android:textStyle="bold"
                                android:textSize="18dp"
                                app:cornerRadius="10dp"
                                app:elevation="3dp"/>
                    </LinearLayout>
                </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>