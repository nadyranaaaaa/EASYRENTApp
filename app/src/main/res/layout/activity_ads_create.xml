<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdsCreateActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="0dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp"
                        android:layout_marginBottom="18dp"
                        android:background="#F3EFEF"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical">


                            <ImageButton
                                android:id="@+id/btn_imageProgram"
                                android:layout_width="333dp"
                                android:layout_height="126dp"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:adjustViewBounds="true"
                                android:background="@color/white"
                                android:scaleType="fitCenter"
                                android:text="+"/>
                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/progress_bar"
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:layout_alignParentStart="true"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:visibility="invisible"
                            android:indeterminate="true"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/txtalamat"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:background="@drawable/rounded_edittext"
                                android:clickable="false"
                                android:layout_marginRight="3dp"
                                android:drawablePadding="10dp"
                                android:ems="10"
                                android:layout_margin="8dp"
                                android:hint="Alamat rumah"
                                android:padding="10dp"

                                android:inputType="number"
                                android:textColor="@color/black"
                                android:textColorHint="#6B6B6B"
                                android:gravity="start|center"
                                android:textSize="15dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/txtdaerah"
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:background="@drawable/rounded_edittext"
                                    android:clickable="false"
                                    android:layout_marginRight="3dp"
                                    android:drawablePadding="10dp"
                                    android:ems="10"
                                    android:hint="Daerah"
                                    android:padding="10dp"
                                    android:inputType="number"
                                    android:textColor="@color/black"
                                    android:textColorHint="#6B6B6B"
                                    android:gravity="start|center"
                                    android:textSize="15dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/txtnegeri"
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:background="@drawable/rounded_edittext"
                                    android:clickable="false"
                                    android:drawablePadding="10dp"
                                    android:ems="10"
                                    android:layout_margin="3dp"
                                    android:hint="Negeri"
                                    android:padding="10dp"
                                    android:inputType="number"
                                    android:textColor="@color/black"
                                    android:textColorHint="#6B6B6B"
                                    android:gravity="start|center"
                                    android:textSize="15dp"/> />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/txtcategory"
                                android:layout_width="180dp"
                                android:layout_height="45dp"
                                android:background="@drawable/rounded_edittext"
                                android:layout_margin="0dp"
                                android:layout_marginHorizontal="20dp"
                                android:entries="@array/category_list"
                                android:focusable="false" />

                            <Spinner
                                android:id="@+id/txtkelengkapan"
                                android:layout_width="170dp"
                                android:layout_height="45dp"
                                android:background="@drawable/rounded_edittext"
                                android:layout_margin="0dp"
                                android:layout_marginHorizontal="20dp"
                                android:entries="@array/kelengkapan_list"
                                android:focusable="false" />
                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/txtmaklumat"
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:layout_marginHorizontal="8dp"
                                android:layout_marginBottom="5dp"
                                android:hint="Maklumat rumah"
                                android:textColorHint="#6B6B6B"
                                android:padding="10dp"
                                android:drawablePadding="10dp"
                                android:background="@drawable/rounded_edittext"
                                android:gravity="start|center"
                                android:inputType="textMultiLine|textPersonName"
                                android:lines="2"
                                android:text=""
                                android:textSize="16sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/txtdeposit"
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:background="@drawable/rounded_edittext"
                                    android:clickable="false"
                                    android:drawablePadding="10dp"
                                    android:ems="10"
                                    android:layout_marginRight="3dp"
                                    android:hint="Deposit"
                                    android:padding="10dp"
                                    android:inputType="number"
                                    android:textColor="@color/black"
                                    android:textColorHint="#6B6B6B"
                                    android:gravity="start|center"
                                    android:textSize="15dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/txtpendahuluan"
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:background="@drawable/rounded_edittext"
                                    android:clickable="false"
                                    android:drawablePadding="10dp"
                                    android:ems="10"
                                    android:hint="Pendahuluan"
                                    android:padding="10dp"
                                    android:inputType="number"
                                    android:textColor="@color/black"
                                    android:textColorHint="#6B6B6B"
                                    android:gravity="start|center"
                                    android:textSize="15dp" />


                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/txtsewa"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:background="@drawable/rounded_edittext"
                                android:clickable="false"
                                android:drawablePadding="10dp"
                                android:ems="10"
                                android:hint="Sewa"
                                android:padding="10dp"
                                android:inputType="number"
                                android:textColor="@color/black"
                                android:textColorHint="#6B6B6B"
                                android:gravity="start|center"
                                android:textSize="15dp" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:orientation="horizontal">

                                <Spinner
                                    android:id="@+id/txtbilik"
                                    android:layout_width="190dp"
                                    android:layout_height="45dp"
                                    android:background="@drawable/rounded_edittext"
                                    android:layout_margin="0dp"
                                    android:layout_marginHorizontal="20dp"
                                    android:entries="@array/bilik_list"
                                    android:focusable="false" />

                                <Spinner
                                    android:id="@+id/txttandas"
                                    android:layout_width="190dp"
                                    android:layout_height="45dp"
                                    android:background="@drawable/rounded_edittext"
                                    android:layout_margin="0dp"
                                    android:layout_marginHorizontal="20dp"
                                    android:entries="@array/tandas_list"
                                    android:focusable="false" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical">


                            <Button
                                android:id="@+id/btnsave"
                                android:layout_width="160dp"
                                android:layout_height="40dp"
                                android:layout_margin="8dp"
                                android:gravity="center"
                                android:text="CIPTA"
                                android:textColor="#FAF6F6"
                                android:textStyle="bold"
                                android:textSize="18dp"
                                app:cornerRadius="10dp"
                                app:elevation="3dp"/>

                            <Button
                                android:id="@+id/btncancel"
                                android:layout_width="160dp"
                                android:layout_height="40dp"
                                android:layout_margin="8dp"
                                android:gravity="center"
                                android:text="BATAL"
                                android:textColor="#FAF6F6"
                                android:textStyle="bold"
                                android:textSize="18dp"
                                app:cornerRadius="10dp"
                                app:elevation="3dp"/>

                        </LinearLayout>

                </LinearLayout>
                </LinearLayout>

            </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>