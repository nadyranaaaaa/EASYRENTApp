<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="@color/cream">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_more"
        android:id="@+id/more"
        android:layout_margin="15dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagerumah"
                android:layout_width="260dp"
                android:layout_height="190dp"
                android:layout_row="0"
                android:layout_column="0" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:id="@+id/apply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="@color/green"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:id="@+id/category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:padding="5dp"
                        android:text="Jenis Kediaman"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/kelengkapan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kelengkapan Penuh"
                    android:gravity="center"
                    android:drawablePadding="6dp"
                    android:drawableStart="@drawable/ic_kelengkapan"
                    android:textColor="@android:color/black"
                    android:textSize="10sp"
                    android:layout_gravity="left"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:id="@+id/bilik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bilik"
                    android:gravity="center"
                    android:drawablePadding="6dp"
                    android:drawableStart="@drawable/ic_bilik"
                    android:textColor="@android:color/black"
                    android:textSize="10sp"
                    android:layout_gravity="left"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:id="@+id/tandas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tandas"
                    android:gravity="center"
                    android:drawablePadding="6dp"
                    android:drawableStart="@drawable/ic_tandas"
                    android:textColor="@android:color/black"
                    android:textSize="10sp"
                    android:layout_gravity="left"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="5dp"/>


            </LinearLayout>

        </GridLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">



            <ImageView
                android:id="@+id/save"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_save" />

        </RelativeLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:orientation="horizontal">

            <GridLayout
                android:layout_width="290dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/comment"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_baseline_chat_bubble_outline_24" />

                <TextView
                    android:id="@+id/alamat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="2dp"
                    android:text="Alamat"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="15dp" />

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/daerah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Daerah"
                        android:textColor="@android:color/black"
                        android:textSize="10dp"
                        android:layout_gravity="left"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:id="@+id/negeri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Negeri"
                        android:textColor="@android:color/black"
                        android:textSize="10dp"
                        android:layout_gravity="left"
                        android:layout_marginTop="2dp" />

                </GridLayout>

                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="2dp"
                    android:text="Maklumat"
                    android:textColor="@android:color/black"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="2dp"
                    android:text="Alamat"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="15dp" />
            </GridLayout>


            <GridLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/sewa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sewa"
                        android:textColor="@android:color/black"
                        android:textSize="10sp"
                        android:drawableStart="@drawable/ic_deposit"
                        android:layout_gravity="left"
                        android:gravity="center"                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:id="@+id/deposit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deposit"
                        android:textColor="@android:color/black"
                        android:textSize="10sp"
                        android:drawableStart="@drawable/ic_sewa"
                        android:layout_gravity="left"
                        android:gravity="center"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:id="@+id/pendahuluan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pendahuluan"
                        android:textColor="@android:color/black"
                        android:textSize="10sp"
                        android:drawableStart="@drawable/ic_pendahuluan"
                        android:layout_gravity="right"
                        android:gravity="center"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="5dp"/>

                </LinearLayout>

            </GridLayout>

        </GridLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>